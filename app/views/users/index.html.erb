<h1>Listing users</h1>

<table>
  <tr>
    <th>User type</th>
    <th>Full name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Password</th>
    <th>Organization</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_type %></td>
    <td><%= user.full_name %></td>
    <td><%= user.address %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= user.organization %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

